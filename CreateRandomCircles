
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Circle demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="circles.css">
    <script type="text/javascript" src="dist\paper-full.js"></script>
    <script type="text/paperscript" canvas="canvas">

    


    var circles = [];
          
        function onKeyDown(event) {
        
        
            //Randomize position of circle after keypress
            var maxPoint = new Point(view.size.width, view.size.height);
            var randomPoint = Point.random();
            var point = maxPoint * randomPoint;
            console.log(maxPoint);
            
            // When a key is pressed, set the content of the text item:
               new Path.Circle(point, 10).fillColor = "orange"; 

 }

 var animatedCircle = new Path.Circle(new Point(300, 300), 100);
 animatedCircle.fillColor = "red";

 function onFrame(event){

    for(var i = 0; i < circles.length; i++){
    circles[i].fillColor.hue += 1; 
    }
    animatedCircle.fillColor.hue += 1; 
    animatedCircle.scale(.9) 
 }






    </script>
</head>
<body>
    
<canvas id="canvas" resize> </canvas>


